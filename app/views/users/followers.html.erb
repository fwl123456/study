<h1>followers:</h1>
<table>
  <tr>
    <th>name</th>
    <th>age</th>
    <th>sex</th>
    <th colspan="3"></th>
  </tr>
	<% @followers.each do |follower| %>
    <tr>
      <td><%= follower.name %></td>
      <td><%= follower.age %></td>
      <td><%= follower.sex %></td>
      <td><%= link_to '取消关注', unfollow_user_path(follower),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

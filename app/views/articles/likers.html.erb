<h1>Likers</h1>
<table>
  <tr>
    <th>name</th>
    <th>age</th>
    <th>sex</th>
    <th colspan="3"></th>
  </tr>
<% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.age %></td>
      <td><%= user.sex %></td>
      <% if current_user.followers.include? user %>
      <td><%= link_to '取消关注', unfollow_user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% else %>
      <td><%= link_to '关注', follow_user_path(user), 
              method: :get,
              data: { confirm: 'Are you sure?' }%></td>
      <% end %>
    </tr>
    <% end %>
</table>